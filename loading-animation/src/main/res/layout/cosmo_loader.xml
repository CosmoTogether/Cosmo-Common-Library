<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkProgress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42f560">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@id/imgBkg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/ic_cosmo_logo" />

    <ImageView
        android:id="@+id/imgBkg"
        android:layout_width="120dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_loader" />

    <ImageView
        android:id="@+id/imgProgress"
        android:layout_width="50dp"
        android:layout_height="8dp"
        android:layout_alignStart="@+id/imgBkg"
        android:layout_alignBottom="@+id/imgBkg"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_loading_mover" />

    <TextView
        android:id="@+id/msgText"
        style="?cosmoTextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBkg"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="#AAAFB4" />


</RelativeLayout>