<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkProgressLoader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:visibility="visible">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@id/imgBkg"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_cosmo_logo" />

    <ImageView
        android:id="@+id/imgBkg"
        android:layout_width="120dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_loader" />

    <ImageView
        android:id="@+id/imgProgress"
        android:layout_width="70dp"
        android:layout_height="8dp"
        android:layout_alignStart="@+id/imgBkg"
        android:layout_alignBottom="@+id/imgBkg"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_loading_mover" />

    <TextView
        android:id="@+id/msgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBkg"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="#AAAFB4"
        android:textSize="22sp"
        tools:text="Testing Text Here" />
    <TextView
        android:id="@+id/msgText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msgText"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="#AAAFB4"
        android:textSize="16sp"
        tools:text="Testing Text Here" />
</RelativeLayout>