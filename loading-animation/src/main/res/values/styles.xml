<resources>
    <!-- Base application theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light">
        <!--<item name="android:textSize">@dimen/textSizeSettings</item>-->
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme_Cosmo_Animator" parent="Theme.AppCompat.Light">
        <item name="cosmoTextMedium">@style/cosmo_text_medium_smaller</item>
        <item name="cosmoTextLarge">@style/cosmo_text_large_smaller</item>
    </style>

    <style name="cosmo_text_large_smaller">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="cosmo_text_medium_smaller">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CosmoRadioButtonStyle">
        <item name="cosmoRadioButtonTitleTextSize">@dimen/setting_tile_text_size</item>
        <item name="cosmoRadioButtonSubtitleTextSize">@dimen/setting_tile_text_size</item>
        <item name="cosmoRadioButtonBackgroundHeight">@dimen/setting_tile_height</item>
        <item name="cosmoRadioButtonBackgroundRadius">10dp</item>
        <item name="cosmoRadioButtonTitleTextColor">@color/medium_gray</item>
        <item name="cosmoRadioButtonSubtitleTextColor">@android:color/white</item>
        <item name="cosmoRadioButtonBackgroundColor">@color/setting_tile_color</item>
        <item name="cosmoRadioButtonPaddingStart">15dp</item>
        <item name="cosmoRadioButtonPaddingEnd">15dp</item>
        <item name="cosmoRadioButtonSelectedDrawable">@drawable/ic_radio_selected</item>
        <item name="cosmoRadioButtonUnselectedDrawable">@drawable/ic_radio_unselected</item>
        <item name="cosmoRadioButtonFont">@font/neuzeit_bold</item>
    </style>



</resources>
