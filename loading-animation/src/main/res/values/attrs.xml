<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="cosmoTextVerySmall" format="reference" />
    <attr name="cosmoTextSmall" format="reference" />
    <attr name="cosmoTextMedium" format="reference" />
    <attr name="cosmoTextLarge" format="reference" />
    <attr name="cosmoTextLarger" format="reference" />
    <attr name="cosmoTextVeryLarge" format="reference" />
    <attr name="cosmoTextHuge" format="reference" />
    <attr name="cosmoTextEnormous" format="reference" />
    <attr name="cosmoTextGiant" format="reference" />

    <declare-styleable name="CosmoLoader">
        <attr name="message" format="string" />
        <attr name="speed" format="integer" />
        <attr name="maxOffset" format="float" />
    </declare-styleable>
    <declare-styleable name="CosmoTextClock">
        <attr name="display_type" format="integer" >
            <enum name="standard" value="0"/>
            <enum name="no_am_pm" value="1"/>
            <enum name="two_line_no_am_pm" value="2"/>
            <enum name="am_pm_only_12" value="3"/>
            <enum name="date_medium_text" value="4"/>
        </attr>
    </declare-styleable>
</resources>